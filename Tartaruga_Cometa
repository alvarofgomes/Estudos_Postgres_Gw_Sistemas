CREATE TABLE clientes ( 
 	id_cliente SERIAL PRIMARY KEY,  
 	nome VARCHAR(255) NOT NULL,  
 	cpfcnpj CHAR(14) UNIQUE NOT NULL
); 

CREATE TABLE enderecos ( 
 	id_endereco SERIAL PRIMARY KEY,  
 	rua VARCHAR(100) NOT NULL,  
 	numero INT NOT NULL,  
 	bairro VARCHAR(100) NOT NULL,  
 	cidade VARCHAR(100) NOT NULL,  
 	estado VARCHAR(100) NOT NULL,  
 	cep CHAR(9) NOT NULL,  
 	clientes_id INTEGER REFERENCES clientes(id_cliente) ON DELETE CASCADE ON UPDATE CASCADE
); 

CREATE TABLE produtos ( 
 	id_produto SERIAL PRIMARY KEY,  
 	nome VARCHAR(255) NOT NULL,  
 	peso DECIMAL(10,2) NOT NULL,  
 	volume DECIMAL(10,2) NOT NULL,  
 	valorFrete DECIMAL(10,2) NOT NULL  
); 

CREATE TABLE entregas ( 
 	id_entrega SERIAL PRIMARY KEY,  
 	status VARCHAR(50) NOT NULL,  
 	frete DECIMAL(10,2) NOT NULL,
	clientes_id INTEGER REFERENCES clientes(id_cliente) ON DELETE CASCADE ON UPDATE CASCADE
); 

CREATE TABLE itens_entregas (
    id_item SERIAL PRIMARY KEY,
	entrega_id INTEGER REFERENCES entregas(id_entrega),
	produto_id INTEGER REFERENCES produtos(id_produto)
);
